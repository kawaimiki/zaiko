<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Content</th>
      <th>number</th>
      <th>price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |post| %>
      <tr>
        <td><%= image_tag post.image.to_s %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.number %></td>
        <td><%= post.price %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top', posts_path %>